
<div class="col-sm-6">
  <h1><i class="fas fa-users"> </i> <%= t('users')%></i></h1>
</div>
<!-- Main content -->
    <section class="content">
      <div class="row">
        <!-- left column -->
        <div class="col-md-6">
          <!-- general form elements -->
          <div class="box box-primary">
            <!-- form start -->
            <%= form_with(model: usuario, local: true) do |form| %>
              <% if usuario.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(usuario.errors.count, "error") %> prohibited this usuario from being saved:</h2>

                  <ul>
                    <% usuario.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul> 
                </div>
              <%end%>

              <div class="box-body">
                <div class="form-group">
                    <%= form.label t('fullName') %>
                    <%= form.text_field :name, class:"form-control" , placeholder:t('enterFullName') %>
                </div>
                <div class="form-group">
                  <%= form.label :"Email" %>
                  <%= form.email_field :email, class:"form-control" , placeholder:"Enter email" %>
                </div>
                <div class="form-group">
                  <%= form.label t('password') %>
                  <%= form.password_field :password, class:"form-control" , placeholder:t('enterPassword') %>
                </div>
                <div class="form-group">
                 <%= form.label t('confirmPassword') %>
                  <%= form.password_field :password_confirmation, class:"form-control" , placeholder:t('confirmPassword') %>
                </div>

                <div class="form-group ">
                  <label>Status</label>
                  <%= form.select :status, [['Ativo', 1], ['Inativo', '2']], {},{:class=>'form-control'} %>
                </div>
              </div>
              <!-- /.box-body -->

              <div class="box-footer">
              <%= form.submit t('register'), class:"btn btn-primary"  %>
              <%= link_to t('cancel'), usuarios_path, type:'button', class: "btn btn-secondary" %>
              </div>
            <% end %>
          </div>
          <!-- /.box -->
  </section>    

  
                    

