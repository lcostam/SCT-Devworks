<div class="col-sm-6">
  <h1><i class="fas fa-users"> </i> <%=t('users')%> </i></h1>
</div>
<!-- Main content -->
<section class="content">
  <!-- Default box -->
  <div class="card">
    <div class="card-header">
    <div id="notice"><%= notice %></div>
      <div class="card-tools">
        <button type="button" class="btn btn-tool" data-card-widget="collapse" data-toggle="tooltip" title="Collapse">
          <i class="fas fa-minus"></i></button>
        <button type="button" class="btn btn-tool" data-card-widget="remove" data-toggle="tooltip" title="Remove">
          <i class="fas fa-times"></i></button>
      </div>
    </div>
   
      <div class="card-body p-0">
        <table class="table table-striped projects">
            <thead>
                <tr>
                    <th style="width: 1%">
                        #
                    </th>
                    <th style="width: 20%">
                        <%=t('fullname')%>
                    </th>
                    <th style="width: 15%">
                        E-mail
                    </th>
                    <th>
                        <%=t('dateIncluded')%>
                    </th>
                    <th style="width: 8%" class="text-center">
                        Status
                    </th>
                    <th style="width: 35%">
                    </th>
                </tr>
            </thead>
            <% @usuarios.each do |usuario| %>
              <tbody>
                  <tr>
                      <td>
                          #
                      </td>
                      <td>
                            <%= usuario.name %>
                      </td>
                      <td>
                        <%= usuario.email %>
                      </td>
                      <td>
                        <%= usuario.created_at %>
                      </td>
                      <td class="project-state">
                        <% if usuario.status==1 
                           classe = "badge badge-success"
                            valor = t('ativo')
                          else
                            classe = "badge badge-danger"
                            valor = t('inativo')
                          end
                        %>
                        <span class="<%=classe%>"><%= valor %></span>
                      </td>
                      <td class="project-actions text-right">
                          
                            <%= link_to  raw("#{t('edit')} <i class='fas fa-pencil-alt'></i>"), edit_usuario_path(usuario), type:'button', class: "btn btn-success btn-sm" %>
                        
                            <%= link_to raw("#{t('delete')} <i class='fas fa-trash-alt'></i>"), usuario, method: :delete, class: "btn btn-info btn-sm", data: { confirm: 'Are you sure?' } %>
                            
                         
                            
                            <%= link_to raw("#{t('ativar')} <i class='fas fa-share-square'></i>"), usuario, method: :desativar, class: "btn btn-danger btn-sm", data: { confirm: 'Are you sure ' + usuario.name+ ' ?' } %>
                            
                      </td>
                  </tr>
              </tbody>
            <%end%>
        </table>
      </div>
      <BR>

      <BR>
    <!-- /.card-body -->
  </div>
  <!-- /.card -->

</section>
<div class="row">
<div class="col-md-12 text-right">
  <%= link_to t('newUser'), new_usuario_path, class: "btn btn-primary" %>
</div>
</div>
<!-- /.content -->


